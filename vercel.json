{
  "framework": "nextjs",
  "buildCommand": "next build",
  "devCommand": "next dev",
  "ignoreCommand": "npx @vercel/style-guide linting:engine",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "crons": [],
  "cleanUrls": true,
  "build": {
    "env": {
      "NEXT_PUBLIC_BASE_URL": "https://karimsound.com",
      "NODE_VERSION": "18.x"
    }
  },
  "regions": ["dub1"],
  "env": {
    "NODE_ENV": "production"
  },
  "images": {
    "domains": ["firebasestorage.googleapis.com"],
    "sizes": [256, 384, 640, 750, 828, 1080, 1200, 1920, 2048, 3840]
  }
} 